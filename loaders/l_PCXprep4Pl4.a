	!by $00,$01,$0b,$19,$43,$60,$9f,$fc 
	!by $00,$00,$00,$06,$2b,$45,$81,$de 
	!by $00,$00,$00,$00,$1e,$37,$71,$ce 
	!by $19,$2b,$41,$5b,$78,$97,$fe,$f0
