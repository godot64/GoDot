	!by $40,$41,$42,$43,$44,$45,$46,$47
	!by $80,$81,$82,$83,$84,$85,$86,$87
	!by $c0,$c1,$c2,$c3,$c4,$c5,$c6,$c7
	!by $00,$01,$02,$03,$04,$05,$06,$07
	!by $40,$41,$42,$43,$44,$45,$46,$47
	!by $80,$81,$82,$83,$84,$85,$86,$87
	!by $c0,$c1,$c2,$c3,$c4,$c5,$c6,$c7
