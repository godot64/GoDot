; ----------------------------------------- textout

textout4	ldx #27		; in sync
	!by $2c
textout3	ldx #20		; right
	!by $2c
textout2	ldx #13		; left
	!by $2c
textout1	ldx #6		; blank
	ldy #6
txo4	lda synctxts,x
	sta synctx,y
	dex
	dey
	bpl txo4
	ldy #4
	jmp cl5

; ----------------------------------------- Synchronize
; adjust sync

se_syncit	ldx #<(synclst)
	ldy #>(synclst)
	jsr gd_screen
	jsr gd_sproff
	jsr svpointers
	jsr textout1

syncit	jsr switchon
	lda #$08
	sta updata
sy9	lda #0
	sta tmpvec
	sta tmpvec+1
sy6	jsr getkey
	bne sy0
	lda #0
	sta dst
sy2	inc dst
	beq sy1
	lda updata
	bpl sy2
	lda dst
	cmp #$04
	bmi sy3
	cmp #$5f
	bpl sy1
	jmp sy4

sy3	inc tmpvec
	bne sy5
	inc tmpvec+1
sy5	lda tmpvec+1
	cmp #$03
	bne sy6
	jmp sy8 

sy0 	jsr textout1
	lda #$00
	sta updata
	cli
	jsr svpointers
	jmp aj1

sy1	jsr textout2
	jmp sy9

sy11	jsr textout4
	jmp sy9

sy8 	jsr textout3
	jmp sy9

sy4 	lda #$16
	jsr wait
	lda #$64
	sta dst
sy10	lda updata
	bmi sy10
	lda #$01
	jsr wait
	lda updata
	bpl sy1 
	inc dst
	bne sy10
	beq sy11

; ----------------------------------------- 4-level capture

digit	sta mode
	jsr digitize
	jmp getkey

; ----------------------------------------- 4-level capture

level4	lda #0
	beq lv00

; ----------------------------------------- 8-level capture

level8	lda #1
lv00	pha
	lda #$ef
	jsr startcap
	lda #$09
	sta mode+1
	lda #$07
	sta mode
	jsr setcol
	jsr digitize
	lda #0
	sta mode+1
	jsr getkey
	bne lv01
	lda #$b1
	sta lv02
	jsr moveto4
	lda #$11
	sta lv02
	pla
	pha
	beq lv03
	lda #6
	jsr digit
	bne lv01
	jsr filter

lv03	lda #5
	jsr digit
	bne lv01
	jsr filter
	pla
	pha
	beq lv04
	lda #4
	jsr digit
	bne lv01
	jsr filter

lv04	lda #3
	jsr digit
lv01	bne lv05
	jsr filter
	pla
	pha
	beq lv06
	lda #2
	jsr digit
	bne lv05
	jsr filter

lv06	lda #1
	jsr digit
	bne lv05
	pla
	pha
	beq lv07
	jsr filter
	lda #0
	jsr digit
	bne lv05

lv07	lda #src
	sta lv08+1
	jsr filter
	lda #dst
	sta lv08+1

lv05	pla
	jmp nc0

; ----------------------------------

moveto4	lda #$00
	sta src
	sta tmpvec
	lda #$40
	sta tmpvec+1
	lda #$20
	sta src+1
	ldy #0
lv09	lda (tmpvec),Y
lv02	ora (src),Y	; self modified src
	sta (tmpvec),Y
	iny
	bne lv09
	inc src+1
	inc tmpvec+1
	lda src+1
	cmp #$40
	bne lv09
	rts

; ----------------------------------------- Filter

filter	lda mode
	asl
	asl
	asl
	adc #<filters
	sta tmpvec
	lda #$00
	adc #>filters
	sta tmpvec+1
	lda #$00
	sta src
	sta dst
	lda #$20
	sta src+1
	lda #$40
	sta dst+1
lv11	ldy #$07
lv10	lda (src),Y
	and (tmpvec),Y
	ora (dst),Y
lv08	sta (dst),Y
	dey
	bpl lv10
	clc
	lda src
	adc #$08
	sta src
	sta dst
	bcc lv11
	inc src+1
	inc dst+1
	lda src+1
	cmp #$40
	bne lv11
	rts

; -----------------------------------------

mode	!by 0,0
padding	!wo $adad

filters	!by $80,$04,$20,$01,$08,$40,$02,$10
	!by $90,$84,$24,$21,$09,$48,$42,$12
	!by $94,$a4,$25,$29,$49,$4a,$52,$92
	!by $95,$ac,$65,$2b,$59,$ca,$56,$b2
	!by $b5,$ad,$6d,$6b,$5b,$da,$d6,$b6
	!by $bd,$ed,$6f,$7b,$db,$de,$f6,$b7
	!by $fd,$ef,$7f,$fb,$df,$fe,$f7,$bf

clearcol	lda #$00		; clear color ram to $01 (white)
	sta tmpvec
	lda #$D8
	sta tmpvec+1
	ldy #0
cc0	lda #$01
	sta (tmpvec),Y
	iny
	bne cc0
	inc tmpvec+1
	lda tmpvec+1
	cmp #$DC
	bne cc0
	rts

; --------------------------------------- Convert Hires ($2000) to 4Bit ($4000)

; --------------------------------------- Main

startc	jsr initad	; init activity display
	jsr makevram
	lda #<vram1
	ldx #>vram1
	sta farbe
	stx farbe+1
	lda #<($1fff)
	ldx #>($1fff)
	sta bitmap
	stx bitmap+1
	lda #<($4000)
	ldx #>($4000)
	sta fourbit
	stx fourbit+1
	jsr doithi	; convert
	jsr exit		; restore pointer
	jmp se_leave
;
; ---------------------------------------

dnib	!by $00,$ff,$44,$cc
	!by $55,$aa,$11,$dd
	!by $66,$22,$99,$33
	!by $77,$ee,$88,$bb
;
; --------------------------------------- Make Video RAM

makevram	ldy #0
	lda #$10		; weiﬂ auf schwarz
vloop	sta vram,y
	sta vram+250,y
	sta vram+500,y
	sta vram+750,y
	iny
	cpy #250
	bne vloop
	rts
;
; --------------------------------------- Convert to 4Bit Hires

doithi	ldy #0
	lda #$80
	sta bytcnt
	sty yps
tr0	sta blkcnt
	inc farbe
	bne tr1
	inc farbe+1
tr1	lda farbe+1
	cmp #$d0
	beq trready
	lda (farbe),y
	pha
	lsr
	lsr
	lsr
	lsr
	tax
	lda dnib,x
	sta vorne
	pla
	and #15
	tax
	lda dnib,x
	sta hinten
bytes8	ldy #0
	inc bitmap
	bne tr2
	inc bitmap+1
tr2	lda (bitmap),y
	sta byte
	ldy yps
pixels8	asl byte
	rol
	and #1
	tax
	lda hinten,x
	tax
	stx merkbyte
	lda #$aa
	and bytcnt
	beq tr4
	txa
	and #$f0
	sta (fourbit),y
	jmp tr6
tr4	lda merkbyte
	and #15
	ora (fourbit),y
	sta (fourbit),y
	iny
tr6	lsr bytcnt
	bcc pixels8
	lda #$80
	sta bytcnt
	sty yps
	lsr blkcnt
	bcc bytes8
	clc
	lda fourbit
	adc #32
	sta fourbit
	bcc doithi
	inc fourbit+1
	dec adcnt
tr5	bne doithi
	inc y2
	inc y2+2
	lda #3
	sta adcnt
	bne tr5
trready	rts

