
!src "godotlib.lib"
*	= $c000

; -----------------------------------------
; Loader ComputerEyes video digitizer (NTSC)
;        1.00, 26.05.06: first release
;        1.01, 29.06.06: added SCPU awareness (slowdown)
; ----------------------------------------- 

; ----------------------------------------- Equates

	src		= $30	; /$31
	dst		= $32	; /$33
	tmpvec		= $34	; /$35
	mask		= $36

	cpu		= $01
	color		= $30
	farbe		= $32
	bitmap		= $34
	fourbit		= $36
	backc		= $38
	hinten		= $39
	vorne		= $3a
	oben		= $3b
	bytcnt		= $3c
	blkcnt		= $3d
	byte		= $3e
	merkbyte		= $3f
	yps		= $40
	merk		= $41
	vekta8		= $a8
	dest1		= $b0
	adcnt		= $ff
;
	vram		= $cc17
	vram1		= $cc16
;
	sprptr		= $07f8
	spr255		= $3fc0
	x2		= $d004
	y2		= x2+1
	spren		= $d015
	sprxe		= $d01d
	sprcol2		= $d029
;
	sprpntr		= $07e8
	scpuflg		= $1d6b	; must be $3e for SCPU
	speed01		= $d07a	; reg for 1MHz
	speed20		= $d07b	; reg for 20MHz

	graphics		= $d011
	graphbnk		= $d018
	updata		= $dd01	; $dd01
	updirct		= $dd03	; $dd03

; ----------------------------------------- Module Header

header	jmp start
	!by $80
	!by 4
	!by 0
	!wo modend
	!wo 0
	!pet "ComputerEyes    "
	!pet "1.01"
	!pet "29.06.06"
	!pet "A.Dettke        "

; ----------------------------------------- Main

start	jsr speed		; slowdown SCPU
	jsr mchar		; define listbox char
startover	ldx used		; first call?
	bmi requ		; yes, pre-requester
	beq cancel	; error and finished
	cpx #3		; all finished?
	bcs cancel
	rts

; ----------------------------------------- Leave Module

se_leave	jsr speed		; speedup SCPU
	lda #3
	bne cn1
cancel	lda #$ff
cn1	sta used
cn2	sec
	rts

; ----------------------------------------- Display First Requester

requ	lda list+1
	bne rq1
	ldx sc_screenvek
	ldy sc_screenvek+1
	stx list
	sty list+1
rq1	inc used
	ldx #<(celst)
	ldy #>(celst)
	jsr gd_xmloop
rq0	jmp startover

; ----------------------------------------- Speed Switch

speed	lda scpuflg	; adjust speed of SuperCPU
	cmp #$3e
	bne svp1
	lda speedtog
	eor #$ff
	sta speedtog
	beq svp2
	sta speed01
	rts
svp2	sta speed20
svp1	rts

; ----------------------------------------- Define new char

mchar	ldx #7
mc0	lda listchar,x
	sta sc_undochar,x
	dex
	bpl mc0
	rts

; ----------------------------------------- Select Capture level

se_caplvl	lda capflg
	cmp #1
	bne cl0
	lda #$fe
	sta capflg
cl0	inc capflg
	lda capflg
	bmi cl1
	beq cl3
	ldx #17
	!by $2c
cl3	ldx #11
	!by $2c
cl1	ldx #5
	ldy #5
cl4	lda captxts,x
	sta lvltx,y
	dex
	dey
	bpl cl4
	ldy #2
	bne cl5

; ----------------------------------------- Select Adjust

se_togadj	lda adjflg		; toggle between 0 an $ff (0=default)
	eor #$ff
	sta adjflg
mrt0	lda adjflg
	beq mrt1
	ldx #11		; show 
	!by $2c
mrt1	ldx #5
	ldy #5
mrt3	lda adjtxts,x
	sta adjtx,y
	dex
	dey
	bpl mrt3
	iny
cl5	jsr gettab
	ldy #6
	jmp gd_xtxout1

; ----------------------------------------- init text output

gettab	lda #<(tabigad)
	sta sc_texttab
	lda #>(tabigad)
	sta sc_texttab+1
	lda (sc_texttab),y
	sta sc_screentab
	iny
	lda (sc_texttab),y
	sta sc_screentab+1
	lda #0
	tax
	tay
gt0	jsr gd_setpos
	cpx #3
	bne gt0
	stx sc_ho
	jsr gd_trim
	jmp gd_initmove

tabigad	!wo gd_togadj		; 0
	!wo gd_toglvl		; 2
	!wo gd_sync		; 4

; ----------------------------------------- re-build Mainscreen 

restrequ	ldx list
	ldy list+1
	jsr gd_screen
	sec
	rts

; ----------------------------------------- Vars

pointers	!by 0,0,0,0,0,0,0,0
	!by 0,0,0,0,0,0,0,0
	!by 0,0,0,0,0,0,0,0
listchar	!by $00,$3a,$46,$4e,$40,$40,$3c,$00
list	!wo 0
used	!by $ff
speedtog	!by 0
adjflg	!by 0
capflg	!by $ff
adjtxts	!scr "Bright Sync "		; 5, 11
captxts	!scr "Normal4Level8Level"	; 5, 11, 17
synctxts	!scr "       "		; 6
	!by 91
	!scr " left "		; 13
	!scr "right "		; 20
	!by 94
	!scr "in sync" 		; 27

; ----------------------------------------- Screenlist First Requester

celst	!by 0
	!by 5,10,18,12,$91,0,0
	!scr "ComputerEyes@"
gd_togadj	!by 8,10,9,3,$c8
	!wo se_togadj
	!by 223
adjtx	!scr "Bright@"
	!by 8,19,9,3,$cf
	!wo se_adjust
	!scr "Adjust @"
gd_toglvl	!by 11,10,9,3,$c8
	!wo se_caplvl
	!by 223
lvltx	!scr "Normal@"
	!by 11,19,9,3,$cf
	!wo se_normal
	!scr "Capture@"
	!by 14,19,9,3,$cd
	!wo se_leave
	!scr " Leave @"
	!by $80 

; ----------------------------------------- Screenlist Second Requester

synclst	!by 0
gd_sync	!by 14,10,9,3,$d7
	!wo cancel
synctx	!scr "       @"
	!by $80

; ----------------------------------------- Capture 

se_normal	jsr gd_sproff
	jsr svpointers
	lda capflg
	bmi capnorm
	beq cap4lvl

; ----------------------------------------- Capture Level 8

cap8lvl	jsr level8
	bne cpn0

; ----------------------------------------- Capture Level 4

cap4lvl	jsr level4
	bne cpn0

; ----------------------------------------- Capture normal mode

capnorm	jsr gd_sproff
	jsr normal	; capture
cpn0	jsr viewgraph	; look at it, and then gr off
	jsr svpointers
	jsr restrequ
	jsr gd_spron
	sta gr_redisp
	jmp startc	; convert to 4Bit and exit


; ----------------------------------------- Timing
; from: adjust brightness, capture

wait	sec 
w02	pha
w01	sbc #1
	bne w01
	pla
	sbc #1
	bne w02
	rts

; ----------------------------------------- Start Capture
; from: adjust brightness, capture

startcap	and graphics	; toggle screen on/off
	sta graphics

	lda graphbnk	; graphics on
	ora #$08
	sta graphbnk
	lda graphics
	ora #$20
	sta graphics

switchon	lda #$3f		; device on
	sta updirct
	sei
	rts

viewgraph	jsr getkey
	beq viewgraph
	lda graphbnk	; graphics off
	and #$f7
	sta graphbnk
	lda graphics
	and #$df
	sta graphics
	rts

; ----------------------------------------- Set Color (white on black)

setcol	lda #$00		; write color ($10) to $0400 - $07ff
	sta tmpvec
	lda #$04
	sta tmpvec+1

	ldy #$00
sc0	lda #$10
sc1	sta (tmpvec),Y
	inc tmpvec
	bne sc1
	inc tmpvec+1
	lda tmpvec+1
	cmp #$08
	bne sc0
	rts

; ----------------------------------------- Save Sprite Pointers

svpointers
	ldx #23
svp0	lda sprpntr,x
	ldy pointers,x
	sta pointers,x
	tya
	sta sprpntr,x
	dex
	bpl svp0
	rts

; ----------------------------------------- Get Key

getkey	jsr checkkeyb 	; Scnkey
	lda sc_keyprs 	; # keys pressed
	rts

; ----------------------------------------- Adjust 

jsyncit 	jmp se_syncit

se_adjust	lda adjflg
	bne jsyncit
	jsr gd_sproff

; ----------------------------------------- Adjust brightness

adjust	jsr svpointers
	lda #$07
	sta mode
	lda #$ff
	jsr startcap
	jsr setcol
	lda #$09
	sta mode+1
aj0	lda #$ff
	jsr wait
	jsr digitize
	jsr getkey
	beq aj0
	cli
	jsr viewgraph
	jsr svpointers
	stx gr_redisp
	jsr restrequ
aj1	ldx #<(celst)
	ldy #>(celst)
	jsr gd_screen
	jsr gd_spron
	clc
	rts

; ----------------------------------------- Normal Capture

normal	lda #$07
	sta mode
	lda #$ef
	jsr startcap
	jsr setcol
	lda #$09
	sta mode+1
	jsr digitize
nc0	lda #$10
	ora graphics
	sta graphics
	sta gr_redisp
	cli
	rts

; ----------------------------------------- Digitize image

digitize	lda mode
	ora #$08
	sta updata
	lda #0
	sta src
	sta src+1
	lda #$4c
	clc
	adc mode+1
	tay
dg0	jsr hshake	; Handshake, Timing
	dey
	bne dg0
dg8	lda #$80
	sta mask

dg7	jsr getkey
	bne dg1		; break if key pressed

	jsr hshake
	clc
dg6	lda scanlnlo,X
	adc src
	sta tmpvec
	lda scanlnhi,X
	beq dg2
	adc src+1
	sta tmpvec+1
dg3	bit updata
	bmi dg3
	bvc dg4
	lda mask
	ora (tmpvec),Y
	bcc dg5
dg4	lda mask
	eor #$ff
	and (tmpvec),Y
dg5	sta (tmpvec),Y
	inx
	bne dg6
dg2	lsr mask
	bne dg7

	clc		; next card
	lda src
	adc #8
	sta src
	lda src+1
	adc #0
	sta src+1
	cmp #1
	bne dg8

	lda src
	cmp #$40
	bne dg8
dg1	lda mode
	sta updata
	rts

; -----------------------------------------

hshake	lda #0		; Handshake, waiting for init
	sta dst
hs0	lda updata
	bmi hs0
	ldx #2
hs1	dex
	bne hs1
	lda updata
	bmi hs0
	lda #25		; Timing
	jsr wait
	rts

