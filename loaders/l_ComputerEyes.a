exit	lda spren
	and #243
	sta spren
	lda spritehi
	and #243
	sta spritehi
	lda #1
	sta gr_redisp
	clc
	rts
;
initad	ldy #60
	lda #0
adl0	sta spr255+3,y
	dey
	bpl adl0
	sty spr255
	sty spr255+1
	sty spr255+2
	lda #15
	sta sprcol2
	sta sprcol2+1
	lda sprxe
	ora #12
	sta sprxe
	lda spritehi
	ora #12
	sta spritehi
	lda #8
	sta x2
	lda #32
	sta x2+2
	lda #146
	sta y2
	sta y2+2
	lda #$ff
	sta sprptr+2
	sta sprptr+3
	lda spren
	ora #12
	sta spren
	lda #3
	sta adcnt
	rts
;
modend	!eof

