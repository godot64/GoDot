; -------------------------------------- TAB / SPC / Comma

tabs	jsr gword		; get TAB value (to .a and INT)
	sbc spalte
	sta int
	bcc ++		; if 0, leave
	bcs tabset

spcs	jsr gword
	lda #32
	ldx rvsflag
	beq +
	lda #$a0		; reverted Space
	!by $2c
tabset	lda #$1d		; CRSR right
+	sta space
	lda int
	beq ++		; 		### bis hier
tab10	tax
	lda space		; Einrückungszeichen
-	jsr bsout
	dex
	bne -
++	ldx #$99		; remember PRINT
	rts

; -------------------------------------- Convert Digits to Word (or just Byte in INT)

gword	ldy #0
	sty int
	sty int+1		; jetzt auf erste Ziffer vorrücken:

-	jsr basin
+	cmp #$20
	beq -

	cmp #$3a
	bcs +
	sec 
	sbc #$30
	sec 
	sbc #$d0
	bcs +
	sbc #$2f
	sta sc_merk
	lda int+1
	sta ls_temp
	cmp #$19		; delimit value to max. 63999 (next pass would exceed 64K)
	bcs +

	lda int		; value times 10:
	asl
	rol ls_temp
	asl
	rol ls_temp
	adc int
	sta int
	lda ls_temp
	adc int+1
	sta int+1
	asl int
	rol int+1
	lda int
	adc sc_merk
	sta int
	bcc -
	inc int+1
	bne -

gw0
+	lda int		; result in INT and INT+1
	rts

