makebytes	lda #$00
	sta code
	sta code+1
	ldy #$00
	ldx bitcount
gg18	lsr current
	bcc gg19
	lda bitslo,y
	ora code
	sta code
	lda bitshi,y
	ora code+1
	sta code+1
gg19	dex
	bne iss0
	dec tabcount
	bne issize
	jsr basin
	sta tabcount
	tax
	bne issize
	pla
	pla
	rts

