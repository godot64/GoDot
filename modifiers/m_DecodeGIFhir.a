init	lda #0		; start at line #0
	sta linenr
	lda yo		; set top skip counter
	ldx yo+1
	sta tskip
	stx tskip+1
	ldx scalex	; set scale factors
	lda scale,x
	sta stxskip
	sta xskip
	lda scaley
	sta yskip

	lda #0		; clear buf0 ($cc00-$cc9f)
	tay
s7	sta buf0,y
	iny
	cpy #160
	bne s7

	ldx #6		; init Undo address in REU ($1000)
	lda #0
wu0	sta rm_werte,x
	dex
	bpl wu0
	lda #>buf0	; from BUF0 (in C64)
	sta rm_werte+1
	lda #$10		; to UNDO (in REU)
	sta rm_werte+3
	lda #160		; 160 bytes to transfer each time
	sta rm_werte+5
	lda rm_ramundo	; fake UNDO
	sta mundo
	lda #1
	sta rm_ramundo
	rts

; -------------------------------------- 

scale	!by $ff,0,0,1,1,2,2,3
stxskip	!by 0
scalex	!by 0
scaley	!by 0
xskip	!by 0
yskip	!by 0
px2read	!wo 160
linenr	!by 0
bufptr	!by 0
bbuf	!by 0
cnt1	!by 0

tskip	!wo 0
lskip	!wo 0
rskip	!wo 0

pxlcnt	!wo 0

xs	!wo 0
ys	!wo 0
xo	!wo 0
yo	!wo 0
xr	!wo 0
modus	!by 0
mrky	!by 0

; -------------------------------------- Compute Skip values

limits	lda topoff	; top offset?
	ora topoff+1
	beq dc9
	ldx #16
	bne dc10
dc9	ldx #8
	lda #200
	sta cntwert
dc10	jsr tcopy
	lda #160		; set # of pixels to read to 160
	sta px2read
	ldx xscale	; retrieve values from LOADER
	stx scalex
	lda yscale	; yskip
	sta scaley
	lda dbl		; double (yskip=enlarge)
	sta double
	ldx #1
	stx adcnt
	dex
	lda double
	beq dc41
	stx scaley	; if double then yskip=0

dc41	txa		; set values to 0 (tskip..xr)
dc4	sta tskip,x
	inx
	cpx #18
	bne dc4

	ldx #3		; take over left offset and top offset
dc2	lda leftoff,x
	sta xo,x
	lda hori,x	; the same for hori and vert (=> xs/ys)
	sta xs,x
	dex
	bpl dc2

	ldx scalex	; get value for x-scale (0=>320)
	lda xtablo,x
	sta breite
	lda xtabhi,x
	sta breite+1
	lda #<(200)	; height => 200
	sta hoehe
	lda #>(200)
	sta hoehe+1
;			zu klein in x ?
	sec
	lda hori		; original width minus target width
	sbc breite
	lda hori+1
	sbc breite+1
	bcc dc3		; target is narrower, so take care
;			rechtsskip:
dc7	sec
	lda hori
	sbc breite
	pha
	lda hori+1
	sbc breite+1
	tax
	sec
	pla
	sbc leftoff
	sta xr
	txa
	sbc leftoff+1
	sta xr+1
	rts

; -------------------------------------- 

dc3	lda hori		; original width replaces target width
	sta breite
	sta px2read
	lda hori+1
	sta breite+1
	ldx scalex
	beq dc7
	inx
	sta sc_merk+1	; store width
	lda breite
	sta sc_merk
	stx divis		; get divisor (scale factor + 1)
	lda #0
	sta result
	sta result+1

dc33	sec		; divide width by scale 
	lda sc_merk
	sbc divis
	sta sc_merk
	bcs dc32
	dec sc_merk+1
	bpl dc32
	lda result
	ldx result+1
	bne dc33
	jmp dc34
dc32	inc result
	bne dc33
	inc result+1
	bne dc33

dc34	bne dc36
	cmp #160
	bcc dc35
dc36	lda #160
dc35	sta px2read
	clc
	lda sc_merk
	adc divis
	sta sc_merk
	clc
	lda xo
	adc sc_merk
	sta xo
	bcc dc31
	inc xo+1
dc31	jmp dc7

