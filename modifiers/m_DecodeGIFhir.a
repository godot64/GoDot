decrunch	ldx #24		; Message: "Cnvrt"
	jsr tcopy
	jsr gd_clrms
	inx 
	stx adcnt
	lda #50
	sta cntwert
	lda #>data	; from $4000
	sta src+1
	sta buffer+1
	lda #>decodebuf	; to $2000
	sta dst+1
	ldy #0
	sty src
	sty dst
	sty buffer

	lda #25		; 25 blocklines
	sta min

dch7	ldx #5
dch0	lda (src),y	; copy 1280 bytes to buffer
	sta (dst),y
	iny
	bne dch0
	inc src+1
	inc dst+1
	dex
	bne dch0

	clc		; restore vectors
	lda buffer+1
	sta src+1
	lda #>decodebuf
	sta dst+1

	lda #8 		; 8 lines per blockline
	sta minx

dch6	lda #40		; with 40 tiles each
	sta blcnt

dch4	ldy #0		; swap data
dch1	lda (dst),y	; from $2000+
	sta (src),y	; to $4000+
	iny
	cpy #4
	bne dch1

	sty mrky
	jsr adinc
	ldy mrky
	clc		; advance to next tile in $4000
	lda src
	adc #32
	sta src
	bcc dch2
	inc src+1
dch2	clc		; and in $2000
	lda dst
	adc #4
	sta dst
	bcc dch3
	inc dst+1

dch3	dec blcnt		; 40 times
	bne dch4

	clc
	lda buffer
	adc #4
	sta buffer
	sta src
	bcc dch5
	inc buffer+1
dch5	lda buffer+1
	sta src+1

	dec minx		; 8 times
	bne dch6	

	clc		; advance to next blockline in $4000
	lda buffer
	adc #<1248
	sta buffer
	sta src
	lda buffer+1
	adc #>1248
	sta buffer+1
	sta src+1

	lda #>decodebuf
	sta dst+1
	lda #0
	sta dst
	tay

	dec min		; 25 times
	beq dch8
	jmp dch7

dch8	rts

