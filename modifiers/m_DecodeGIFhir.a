pdecode	ldy codesize
	lda bitshi,y
	sta clearcode+1
	tax
	lda bitslo,y
	sta clearcode
	pha
	iny
	sty csizepl1
	lda bitshi,y
	sta presssize+1
	lda bitslo,y
	ora #$01
	sta presssize
	pla
	tay
	iny
	bne gg16
	inx
gg16	sty eoicode
	stx eoicode+1
	iny
	bne gg17
	inx
gg17	sty tablo
	sty tabhi
	txa
	clc
	adc #>decodebuf
	sta tablo+1
	clc
	adc #$10
	sta tabhi+1
	lda #<decodebuf
	ldy #>decodebuf
	ldx #$30
	jmp erase

