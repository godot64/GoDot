write2undo
	lda #$90		; Stash 160 bytes
	jsr gd_reu
	clc
	lda rm_werte+2
	adc #160
	sta rm_werte+2
	bcc w2u0
	inc rm_werte+3	; Bank (+4) doesn't ever get exceeded
w2u0	rts

