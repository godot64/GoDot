; -------------------------------------- Start module

sk12	jmp noreu

start	pla		; retrieve calling address
	tax
	pla
	tay
	pha
	txa
	pha
	cpy #2		; directly executed?
	bne direct	; yes, error message

	lda ls_ramdrive	; REU angeschlossen?
	and #15
	cmp #9
	beq sk12		; nein, gar kein Ram
	cmp #7		; nur SuperRAM?
	beq sk12		; ja, skip Rest
	and #12
	beq sk12		; kein REU, skip Rest

