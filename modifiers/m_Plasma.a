evexec	lda #0
	sta mask
	jsr initad
	ldy paltype
	lda paladds,y
	sta palvec
	iny 
	lda paladds,y
	sta palvec+1

	lda #8		; 8 scanlines per row
	sta blcnt
	lda #0
	sta lcnt		; 200 scanlines total
	sta dst
	lda #>sy_4bit
	sta dst+1

bloop	ldx #0		; count 40
	stx pcnt		; doppelpixel 1

sloop	jsr eval
	ldy #0
	sta (dst),y

	inc pcnt		; dp 2
	inc pcnt
	jsr eval
	ldy #1
	sta (dst),y

	inc pcnt		; dp 3
	inc pcnt
	jsr eval
	ldy #2
	sta (dst),y

	inc pcnt		; dp 4
	inc pcnt
	jsr eval
	ldy #3
	sta (dst),y

	inc pcnt
	inc pcnt

	lda dst		; next tile
	clc 
	adc #32
	sta dst
	bcc +
	inc dst+1
+	inx 
	cpx #40		; until 40
	bne sloop

	jsr adinc
	inc lcnt
	lda lcnt
	cmp #200		; 200 scanlines?
	beq finish

	dec blcnt		; 8 scanlines?
	beq +

	lda dst		; no, next scanline
	sec 
	sbc #<1276	; (minus 1276)
	sta dst
	lda dst+1
	sbc #>1276
	sta dst+1
	jmp bloop

+	lda #8		; yes, next block row
	sta blcnt
	sec 
	lda dst
	sbc #28		; (minus 28)
	sta dst
	lda dst+1
	sbc #0
	sta dst+1
	jmp bloop

; --------------------------------------

finish	jsr rasterize
	jsr clearad	; bar off
	jsr setinfo

; --------------------------------------

evcancel	lda #0
	sta sc_iflag
	lda memman
	sta gd_modswitch
	sec 
	rts 

; --------------------------------------

eval	lda constant1	; term 1
	ldy factor3
-	clc 
	adc lcnt
	dey 
	bne -
	bit func2flg	; sin (+) or cos (-)?
	bpl +
	clc 
	adc #192
+	tay 
	lda sinustab,y
	sta stermres	; result of subterm

	lda #0
	sta work
	sta work+1
	ldy factor2
-	lda work
	clc 
	adc stermres
	sta work
	bcc +
	inc work+1
+	dey 
	bne -
	lsr work+1
	ror work
	lsr work+1
	ror work

	lda work
	ldy factor1
-	clc 
	adc pcnt
	dey 
	bne -
	bit func1flg
	bpl +
	clc 
	adc #192
+	tay 
	lda sinustab,y
	sta result

	lda constant2	; term 2
	ldy factor6
-	clc 
	adc pcnt
	dey 
	bne -
	bit func4flg
	bpl +
	clc 
	adc #192
+	tay 
	lda sinustab,y
	sta stermres	; result of subterm

	lda #0
	sta work
	sta work+1
	ldy factor5
-	lda work
	clc 
	adc stermres
	sta work
	bcc +
	inc work+1
+	dey 
	bne -
	lda work
	lsr work+1
	ror
	lsr work+1
	ror

	ldy factor4
-	clc 
	adc lcnt
	dey 
	bne -
	bit func3flg
	bpl +
	clc 
	adc #192
+	tay 
	lda sinustab,y
	clc 
	adc result
	adc mask
	sta result
	and #3
	sta mask

	lda result	; get as result:
	lsr
	lsr
	tay 
	lda (palvec),y	; color
	rts 

