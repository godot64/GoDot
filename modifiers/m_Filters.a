-	lda buf_o-1,y
	clc 
	adc buf_o+1,y
	adc buf_u-1,y
	adc buf_u+1,y
	lsr 
	lsr 
	sta buf_r,y

	lda buf_o+160-1,y
	clc 
	adc buf_o+160+1,y
	adc buf_u+160-1,y
	adc buf_u+160+1,y
	lsr 
	lsr 
	sta buf_r+160,y

	iny 
	cpy #160
	bne -
	rts 

; ------------------------------------------------ 

evlaplace	ldy #0

-	lda buf_m,y
