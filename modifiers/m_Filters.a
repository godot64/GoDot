	cmp bbuf
	bcs + 
	sta bbuf
+ 	lda buf_u-1,y	; erstes byte der unteren rasterzeile testen
	cmp bbuf
	bcs +
	sta bbuf
+ 	lda buf_u,y	; zweites byte
