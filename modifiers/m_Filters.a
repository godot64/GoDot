; ------------------------------------------------ Declarations

	lcnt		= $30
	adcnt		= $31
	dst		= $35
	src		= $37
	tcnt		= $3a
	bbuf		= $3b
	event		= $3c	; /$3d
	mrkx		= $3e
	mrky		= $3f
	finish		= $40	; /$41

	gr_redisp		= $0fbd

	bbase		= $2002
	buf_o 		= bbase
	buf_m 		= buf_o+324
	buf_u 		= buf_m+324
	buf_r 		= buf_u+324

	sprptr		= $07f8
	wbuf		= sy_global
	spr255		= $3fc0

	spr2x		= $d004
	spr2y		= $d005
	msbx		= $d010
	spren		= $d015
	sprxe		= $d01d
