	sta bbuf		; nein, merken
	lda buf_o-1,y	; erstes byte der oberen rasterzeile holen
	cmp bbuf		; vergleichen
	bcs +		; größer/gleich: nicht beachten
	sta bbuf		; kleiner: als neues vergleichsbyte merken
